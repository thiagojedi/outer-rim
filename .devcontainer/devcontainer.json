{
  "name": "Deno",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--userns=keep-id",
    "--security-opt=label=disable"
  ],
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8000,
    63437
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "deno install -g -A --unstable-fs --unstable-kv --unstable-temporal -n fedify jsr:@fedify/cli",
  "postAttachCommand": "deno task hook install && deno install && sed -i -e 's/\"deno\"/\"no-deno\"/' node_modules/@libsql/client/package.json",
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "justjavac.vscode-deno-extensionpack"
      ]
    },
    "jetbrains": {
      "backend": "WebStorm",
      "plugins": [
        "deno"
      ]
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
