{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=src/static/,src/routes/ src/dev.ts",
    "build": "deno run -A src/dev.ts build",
    "preview": "deno run -A src/main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts",
    "db:push": "npx drizzle-kit push"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "@auth/core": "npm:@auth/core@^0.37.3",
    "@fedify/fedify": "jsr:@fedify/fedify@^1.2.3",
    "@libsql/client": "npm:@libsql/client@^0.14.0",
    "@types/oauth2-server": "npm:@types/oauth2-server@^3.0.18",
    "drizzle-kit": "npm:drizzle-kit@^0.28.0",
    "drizzle-orm": "npm:drizzle-orm@^0.36.1",
    "lint-staged": "npm:lint-staged@^15.2.10",
    "oauth2-server": "npm:oauth2-server@^3.1.1",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "$std/": "https://deno.land/std@0.216.0/",
    "zod": "https://deno.land/x/zod/mod.ts"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" }
}
